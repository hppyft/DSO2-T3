<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:id="@+id/item_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/dark_gray"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_bottom_item"
        android:layout_marginLeft="@dimen/margin_left_item"
        android:layout_marginStart="@dimen/margin_left_item"
        android:layout_marginTop="@dimen/margin_top_item"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_resumo_pt"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop"
            tools:src="@drawable/ponte_hercilio_luz"/>

        <TextView
            android:id="@+id/nome_resumo_pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_left_item"
            android:layout_marginStart="@dimen/margin_left_item"
            tools:text="TEXTO DE TESTE"/>

    </LinearLayout>

</LinearLayout>